    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.5",
    "redux": "^5.0.1",
    "wavesurfer.js": "^7.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/container-queries": "^0.1.1",
